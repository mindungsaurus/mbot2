generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CharacterGold {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  gold         Int
  dailyExpense Int
  isNpc        Boolean
  friend       String?
  day          Int?
}

model ItemsInfo {
  id      Int    @id @default(autoincrement())
  name    String @unique
  quality Int
  unit    String
  type    String
  noSpace String @unique
}

model Inventory {
  id       Int    @id @default(autoincrement())
  itemName String
  amount   Int
  owner    String

  @@unique([owner, itemName])
}

model ItemAlias {
  id       Int    @id @default(autoincrement())
  alias    String @unique
  itemName String
}

model User {
  id           String        @id @default(cuid())
  username     String        @unique
  passwordHash String
  passwordSalt String
  isAdmin      Boolean       @default(false)
  createdAt    DateTime      @default(now())
  sessions     UserSession[]
  encounters   Encounter[]
  unitPresetFolders UnitPresetFolder[]
  unitPresets        UnitPreset[]
  tagPresetFolders  TagPresetFolder[]
  tagPresets         TagPreset[]
}

model UserSession {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  userId     String
  createdAt  DateTime @default(now())
  lastSeenAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Encounter {
  id        String          @id @default(cuid())
  ownerId   String
  name      String
  state     Json
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  owner     User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  undo      EncounterUndo[]
}

model EncounterUndo {
  id          Int       @id @default(autoincrement())
  encounterId String
  state       Json
  createdAt   DateTime  @default(now())
  encounter   Encounter @relation(fields: [encounterId], references: [id], onDelete: Cascade)

  @@index([encounterId, createdAt])
}

model UnitPresetFolder {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  order     Int      @default(0)
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  parent    UnitPresetFolder? @relation("UnitPresetFolderTree", fields: [parentId], references: [id], onDelete: SetNull)
  children  UnitPresetFolder[] @relation("UnitPresetFolderTree")
  presets   UnitPreset[]

  @@index([ownerId])
  @@index([parentId])
}

model UnitPreset {
  id        String   @id @default(cuid())
  ownerId   String
  folderId  String?
  name      String
  order     Int      @default(0)
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  folder    UnitPresetFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@index([ownerId])
  @@index([folderId])
}

model TagPreset {
  id             String   @id @default(cuid())
  ownerId        String
  folderId       String?
  name           String
  order          Int      @default(0)
  kind           String
  decOnTurnStart Boolean  @default(false)
  decOnTurnEnd   Boolean  @default(false)
  colorCode      Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  owner          User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  folder         TagPresetFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@index([ownerId])
  @@index([folderId])
}

model TagPresetFolder {
  id        String   @id @default(cuid())
  ownerId   String
  name      String
  order     Int      @default(0)
  parentId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  parent    TagPresetFolder? @relation("TagPresetFolderTree", fields: [parentId], references: [id], onDelete: SetNull)
  children  TagPresetFolder[] @relation("TagPresetFolderTree")
  presets   TagPreset[]

  @@index([ownerId])
  @@index([parentId])
}
