generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CharacterGold {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  gold         Int
  dailyExpense Int
  isNpc        Boolean
  friend       String?
  day          Int?
}

model ItemsInfo {
  id      Int    @id @default(autoincrement())
  name    String @unique
  quality Int
  unit    String
  type    String
  noSpace String @unique
}

model Inventory {
  id       Int    @id @default(autoincrement())
  itemName String
  amount   Int
  owner    String

  @@unique([owner, itemName])
}

model ItemAlias {
  id       Int    @id @default(autoincrement())
  alias    String @unique
  itemName String
}
