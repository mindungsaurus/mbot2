generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CharacterGold {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  gold         Int
  dailyExpense Int
  isNpc        Boolean
  friend       String?
  day          Int?
}

model ItemsInfo {
  id      Int    @id @default(autoincrement())
  name    String @unique
  quality Int
  unit    String
  type    String
  noSpace String @unique
}

model Inventory {
  id       Int    @id @default(autoincrement())
  itemName String
  amount   Int
  owner    String

  @@unique([owner, itemName])
}

model ItemAlias {
  id       Int    @id @default(autoincrement())
  alias    String @unique
  itemName String
}

model User {
  id           String        @id @default(cuid())
  username     String        @unique
  passwordHash String
  passwordSalt String
  createdAt    DateTime      @default(now())
  sessions     UserSession[]
  encounters   Encounter[]
}

model UserSession {
  id         String   @id @default(cuid())
  tokenHash  String   @unique
  userId     String
  createdAt  DateTime @default(now())
  lastSeenAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Encounter {
  id        String          @id @default(cuid())
  ownerId   String
  name      String
  state     Json
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  owner     User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  undo      EncounterUndo[]
}

model EncounterUndo {
  id          Int       @id @default(autoincrement())
  encounterId String
  state       Json
  createdAt   DateTime  @default(now())
  encounter   Encounter @relation(fields: [encounterId], references: [id], onDelete: Cascade)

  @@index([encounterId, createdAt])
}
